<script type="text/javascript">
	var page = 1;
	$(function(){
		$(document).on('click', '#view-more-leaders', function(){
			$.ajax({
				type: 'get',
				url: '/leaderboard',
				data: {page: ++page},
				success: function(data){
					$('#leaders').append(data);
				}
			});
		});
	});
</script>
