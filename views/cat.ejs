<div class="forum_box">
    <div class="forum">
			<div class="cat_title">
			<span>&nbsp;</span> 
			<%=name%>
			</div>
			<%# if (count($res2Fetch) > 0) // if any //will think about it %>
				<div class="subcat">
				<table id="cat-tbl"class="tbl_subcat">
				<tr>
				<td>Subject</td>
				<td>Replies</td>
				<td>Views</td>
				<td>Last Post</td>
				<%var numPosts = 0; %>
				<%if(topics.length > 0){%>
				<% for(topic of topics.reverse()){ %>
					<%if(topic.forumType != 'subforum'){%>
						<%++numPosts;%>
						<%- include('cat_row', {topic: topic}) %>
					<%}%>
				<%}%>
				<%}if(numPosts == 0){%>
					<tr id="no-posts">
					<td style="padding:10px;">No Posts yet</td>
					<td></td> 
					<td></td> 
					<td></td> 
					</tr>
				<%}%>
				</table>
				</div><br/>
			</div>
   		</div>
		
			<input type="hidden" value="<%=btoa(name)%>|<%=_id%>" class="hdn_cat" />
