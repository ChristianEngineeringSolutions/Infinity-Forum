<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Sasame</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400,400i,500,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/book.css">
        <link rel="stylesheet" href="/css/mobile.css">
        <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
        <link rel="shortcut icon" type="image/x-icon" href="/images/bitmap.png" />
        <script
        src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
        <script
              src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
              integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
              crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
    </head>
    <body>
        <% if(locals.session && locals.session.user != null){ %>
            <div id="login">
                <br/>
                <br/>
                <a class="link white" href="/login"><%=session.user%></a>
            </div>
        <%} else{ %>
            <div id="login">
                <br/>
                <br/>
                <a class="link white" href="/login">Help</a> |
                <a class="link white" href="/login">Login</a> |
                <a class="link white" href="/login">Register</a> |
                <a class="link white" href="/login">Donate</a>

            </div>
        <%} %>
        <div id="mobile_book_menu_main">
            <div id="mobile_active_close">
                X
            </div>
            <div class="header">
                Add Passage
            </div>
            <form action="/add_passage/<%=chapter%>" method="GET">
                <input class="control_input"  name="keys" placeholder="Key 1, Key 2, Key 3, ..." type="text" autocomplete="off" />
                <textarea class="control_textarea" cols="30" placeholder="" id="" name="passage" rows="10"></textarea>
                <button class="mobile_control_button" id="mobile_add_passage">Pour Water</button>
            </form>
            <div class="header">
                Add Chapter
            </div>
            <form action="/add_chapter/<%=chapter%>" method="GET">
                <input class="control_input"  name="title" type="text" placeholder="Title"/>
                <button class="mobile_control_button" id="mobile_add_chapter">Enrich Soil</button>
            </form>
            <div class="header">
                Table of Contents
            </div>
            <div id="mobile_category_list">
                <%if(chapters){%>
                    <%chapters.forEach(function(f) { %>
                        <%if(sasasame == 'sasasame'){%>
                            <%if(!f.chapter){%>
                                <p class="mobile_category"><a class="basic_link" href="/sasasame/<%=f.title%>/<%=f._id%>"><%= f.title %></a></p>
                            <%}%>
                        <%}%>
                        <%if(sasasame == 'xyz'){%>
                            <p class="mobile_category"><a class="basic_link" href="/sasasame/<%=f.title%>/<%=f._id%>"><%= f.title %></a></p>
                        <%}%>
                <%});}%>
                <hr/>
                <br/>
                <br/>

            </div>
        </div>
        <div id="control_panel">
            <div id="control_nav">
                    <div id="main_header">
                        <div id="mobile_book_menu">
                            <ion-icon name="menu"></ion-icon>
                        </div>
                        <a href="/">
                            <img id="little_seed" alt="" src="/images/test.png"/>
                        </a>
                    </div>
            </div>
            <div id="control_blocks">
                <div class="control_block" id="code">
                    <form id="codeform"action="/add_passage/" method="POST">
                    <div class="header no_cursive">
                    <select name="type" id="add_select" autocomplete="off">
                        <option value="passage">Passage</option>
                        <option value="chapter">Chapter</option>
                    </select>
                    </div>
                    <textarea class="control_textarea" cols="30" placeholder="Details" id="" name="passage" rows="6"></textarea>
                    <input name="chapterID" type="hidden" value="<%=chapter%>"/>
                    <button class="control_button" id="add_passage">Add</button>
                    <div id="properties">
                        <div id="add_property"><ion-icon name="add-circle-outline"></ion-icon> Add Property</div> 
                    </div>
                    <div id="property_select">
                        <div class="property_select">
                            <ion-icon class="remove_property"name="remove-circle-outline"></ion-icon> 
                            <!-- For Passages -->
                            <select>
                                <option>Hyperlink</option>
                                <option>Color</option>
                                <option>Background Color</option>
                                <option>CSS</option>
                                <option>Code</option>
                                <option>Javascript</option>
                                <option>HTML</option>
                                <option>Markdown</option>
                                <option>Access</option>
                                <option>Show Icons</option>
                                <option>Show Author</option>
                                <option>Key Schema</option>
                                <option>Is Key Schema?</option>
                                <option>Canvas</option>
                                <option>Tone</option>
                                <option>Hidden</option>
                                <option>Autorun</option>
                                <option>Custom</option>
                            </select>
                            <!-- For chapters -->
                            <!-- <select>
                                <option>Chapter CSS</option>
                                <option>Passage CSS</option>
                                <option>Distraction Free Mode</option>
                                <option>Show Icons</option>
                                <option>Show Authors</option>
                                <option>Impress JS</option>
                                <option>Key Schema</option>
                                <option>Custom</option>
                                <option>Autorun</option>
                            </select> -->
                            <br><br>
                            <input type="" name="">
                        </div>
                    </div>
                    </form>
                </div>
                <div  class="control_block" id="book_of_sasame">
                    <div class="header">
                        <%if(parentChapter != null){%>
                            <div>
                                  <a class="basic_link" rel="modal:open"href="#stream_palette"><ion-icon title="Generate Chapter"name="color-palette"></ion-icon></a>
                                 <a class="basic_link" rel="modal:open"href="#chapter_settings"><ion-icon title="Chapter Settings"name="settings"></ion-icon></a>
                                 <ion-icon title="Add to Queue"class="square_icon"name="square-outline"></ion-icon>
                                 <ion-icon title="Star"class="star_icon"name="star-outline"></ion-icon>
                            </div>
                            <br>
                            <span id="parent_chapter_title"><%=parentChapter.title%></span>
                                <input id="parent_chapter_id"type="hidden" value="<%=parentChapter._id%>"/>
                                <input id="page" type="hidden" value="2" autocomplete="off"/>
                            <div id="chapter_settings" class="modal">
                              <p>CHAPTER OPTIONS</p>
                              <p><input class="modal_input"value="<%=parentChapter.title%>"type="" name=""></p>
                              <select class="modal_select">
                                  <option>Public (Everyone can add and edit/delete everything)</option>
                                  <option>Protected (Others can add and edit/delete their own work)</option>
                                  <option>Private (Others can only see it)</option>
                                  <option>Local (Only you can see it)</option>
                              </select>
                              <p>Distraction Free Mode</p>
                              <p>Download as PDF</p>
                              <p class="chapter_update">Update Chapter</p>
                              <p class="chapter_delete_<%=parentChapter._id%>">Delete Chapter</p>
                              <a href="#" rel="modal:close">Close</a>
                            </div>
                        <%}else{%>
                            <%if(locals.isProfile){%>
                            <input type="hidden" value="true", id="is_profile"/>
                            <span id="parent_chapter_title"><%=session.name%></span> <div title="Chapter Options"id="chapter_options"></div>
                            <%}else{%>
                                <div>
                                    <a class="basic_link" rel="modal:open"href="#stream_palette"><ion-icon title="Generate Passage"name="color-palette"></ion-icon>
                                </div>
                                <br>
                                <span id="parent_chapter_title">Stream</span>
                                

                                <input id="parent_chapter_id"type="hidden" value="Sasame"/>
                                <input id="page" type="hidden" value="2" autocomplete="off"/>
                            <%}%>
                        <%}%>
                    </div>
                    <!-- Modal HTML embedded directly into document -->
                                <div id="stream_palette" class="modal">
                                  <p>Coming Soon.</p>
                                  <a href="#" rel="modal:close">Close</a>
                                </div>
                    <!-- Add upon scroll -->
                    <%if(book){%>
                        <div id="passages">
                        <% book.forEach(function(f) { %>
                            <div class="passage_<%=f._id%> passage">
                                <div class="passage_author">
                                    <%if(f.author){%>
                                     <div><a><%= f.author.name %></a></div>
                                 <%}else{%>
                                     <div><a class="basic_link" href="#">Anonymous</a></div>
                                 <%}%>
                                 <div id="modal_<%=f._id%>" class="modal">
                                    <p>PASSAGE OPTIONS</p>
                                  <textarea class="control_textarea"><%=f.content%></textarea>
                                  <p class="passage_update">Update passage</p>
                                  <p class="passage_delete_<%=f._id%>">Delete passage</p>
                                  <div class="passage_id"><%= f._id %></div>
                                  <a href="#" rel="modal:close">Close</a>
                                </div>
                                 <a class="basic_link" href="#modal_<%=f._id%>" rel="modal:open"><ion-icon title="Details"name="settings"></ion-icon></a>
                                 <ion-icon class="square_icon"title="Add to Queue"name="square-outline"></ion-icon>
                                 <ion-icon title="Star"class="star_icon"name="star-outline"></ion-icon>

                                </div>
                                <input type="hidden" class="original_passage_content" value="<%=f.content%>"/>
                                <%if(typeof f.chapter != 'undefined' && typeof f.chapter.title != 'undefined'){%>
                                <!-- <div class="passage_chapter"><a class="basic_link"href="/sasasame/<%= f.chapter.title %>/<%= f.chapter._id %>"><%= f.chapter.title %></a></div> -->
                                <%}else{%>
                                    <div class="passage_chapter">Sasame</div>
                                <%}%>
                                <!-- <%if(f.author){%> -->
                                <!--     <div class="passage_author">by <a><%= f.author.name %></a> on <%= f.date.toDateString() %></div> -->
                                <!-- <%}else{%> -->
                                <!--     <div class="passage_author">by Anonymous on <%= f.date.toDateString() %></div> -->
                                <!-- <%}%> -->
                                <div class="passage_content"><%= f.content %></div>
                                <canvas class="passage_canvas"></canvas>
                                <div class="sub_passages">
                                    <div class="sub_passage">
                                        <div class="passage_author">
                                        <%if(f.author){%>
                                         <div><a><%= f.author.name %></a></div>
                                     <%}else{%>
                                         <div><a class="basic_link" href="#">Anonymous</a></div>
                                     <%}%>
                                     <div id="modal_<%=f._id%>" class="modal">
                                        <p>PASSAGE OPTIONS</p>
                                      <textarea class="control_textarea"><%=f.content%></textarea>
                                      <p>Update passage</p>
                                      <p>Delete passage</p>
                                      <a href="#" rel="modal:close">Close</a>
                                    </div>
                                     <a class="basic_link" href="#modal_<%=f._id%>" rel="modal:open"><ion-icon title="Details"name="settings"></ion-icon></a>
                                     <ion-icon title="Star"class="star_icon"name="star-outline"></ion-icon>

                                    </div>
                                    <input type="hidden" class="original_passage_content" value="<%=f.content%>"/>
                                    <%if(typeof f.chapter != 'undefined' && typeof f.chapter.title != 'undefined'){%>
                                    <!-- <div class="passage_chapter"><a class="basic_link"href="/sasasame/<%= f.chapter.title %>/<%= f.chapter._id %>"><%= f.chapter.title %></a></div> -->
                                    <%}else{%>
                                        <div class="passage_chapter">Sasame</div>
                                    <%}%>
                                    <!-- <%if(f.author){%> -->
                                    <!--     <div class="passage_author">by <a><%= f.author.name %></a> on <%= f.date.toDateString() %></div> -->
                                    <!-- <%}else{%> -->
                                    <!--     <div class="passage_author">by Anonymous on <%= f.date.toDateString() %></div> -->
                                    <!-- <%}%> -->
                                    <div class="passage_content"><%= f.content %></div>
                                    <canvas class="passage_canvas"></canvas>
                                    <div class="passage_id"><%= f._id %></div>
                                    </div>
                                    <div class="add_sub_passage"><ion-icon title="Add Sub Passage"name="add-circle-outline"></ion-icon></div>
                                </div>

                            </div>
                        <% }); %>
                    </div>
                    <%}%>
                </div>
                <div class="control_block" id="toc">
                    <div class="header">
                        <select id="right_side_select" autocomplete="off">
                            <option value="chapters">Chapters</option>
                            <option value="queue">Queue</option>
                            <option value="brief">Brief</option>
                        </select>
                    </div>
                    <!-- Chapters -->
                    <div id="categories">
                        <input class="control_input"id="right_panel_search"placeholder="Search Sasame" type="" name="">
                        <%if(chapters){%>
                            <%chapters.forEach(function(f) { %>
                            <div class="category">
                                <div>
                                    <a class="link" href="/sasasame/<%=f.title%>/<%=f._id%>"><%= f.title %></a>
                                </div>
                                <div class="category_id"><%= f._id %></div>
                            </div>
                        <%});} %>
                    </div>
                    <!-- Brief from #passages via JS -->
                    <!-- Queue -->
                    <div id="queue">
                        <input class="control_input"placeholder="Chapter Title" type="" name="">
                        <button class="control_button">Create!</button>
                        <div id="queue_items"></div>
                    </div>

                </div>
            </div>
        </div>
        <script src="/js/app.js"></script>
        <script src="/js/book.js"></script>
    </body>
</html>
