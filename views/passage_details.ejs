<!-- 
Source variable: passage
 -->

<div id="detail_title_<%=passage._id%>"class="detail_title"><h3><%=passage.title%></h3></div>
<%if(passage.content != null && passage.content != ''){%>
<hr class="hr">
<%}%>
<div class="detail_description" name="content" id="passage_content_<%=passage._id%>"><%-passage.content%></div>
<!-- <button class="passage_plus_description">+</button> -->
<!-- <textarea class="passage_description" name="tags" id="" cols="30" rows="10" placeholder="Tags"></textarea> -->
<% if(passage.filename){ %>
<img src="/uploads/<%=passage.filename%>" alt="">
<%}%>
<div id="passage_details_advanced_<%=passage._id%>"class="passage_advanced">
    <div class="code_display display_html" name="html" cols="30" rows="10" placeholder="HTML"><pre><code class="language-html"><%=passage.html || 'HTML'%></code></pre></div>
        <div class="code_display display_css" name="css" cols="30" rows="10" placeholder="CSS"><pre><code class="language-css"><%=passage.css || 'CSS'%></code></pre></div>
        <div class="code_display display_js" name="js" cols="30" rows="10" placeholder="Javascript"><pre><code class="language-javascript"><%=passage.javascript || 'Javascript'%></code></pre></div>
</div>
<%if((passage.html && passage.html.length> 1) || (passage.javascript && passage.javascript.length> 1) || (passage.css && passage.css.length> 1)){%>
    <ul class="passage_tabs">
        <li id="passage_details_executable_<%=passage._id%>"class="passage_tab passage_tab_open_advanced view_code">View Code</li>
    </ul>
<%}%> 
<input id="passage_title_<%=passage._id%>"class="passage_title" value="<%=passage.title%>" type="hidden"name="title"placeholder="Title">