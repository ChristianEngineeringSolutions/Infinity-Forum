<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Sasame</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400,400i,500,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/mobile.css">
        <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
        <link rel="shortcut icon" type="image/x-icon" href="images/bitmap.png" />
        <script
        src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div id="control_panel">
            <div id="control_nav">
                    <div id="main_header">
                        <div id="mobile_book_menu">
                            <!-- <ion-icon name="menu"></ion-icon> -->
                            +
                        </div>
                        <a href="/">
                            <img id="little_seed" alt="" src="/images/test.png"/>
                        </a>
                        THE BOOK OF SASAME
                        <div id="control_sub">
                            is kinda like the <span id="hero_sub_seed">roots.</span>
                        </div>
                    </div>
                    <br/>
                    <div class="up_one_level">
                        <a class="up_one_level_link" href="/sasasame">Book</a> | <a class="up_one_level_link" href="javascript:history.back()">Back</a> | <a class="up_one_level_link" href="/control">Control</a>
                    </div>
            </div>
            </div>
        </div>
        <div id="control_panel_header">
            Control Panel
        </div>
        <form id="control_search_form"action="/search_by_key" method="post">
            <input placeholder="Key1, Key2, ..."id="control_key_search" type="text" name="keys" value=""autocomplete="off">
            <button id="control_search"type="submit">Search</button>
        </form>
        <form action="/make_golden_road" method="post">
            <input placeholder="New Chapter Title"id="control_new_chapter_title" type="text" name="new_chapter_title" value=""autocomplete="off">
            <input type="hidden" name="passage_ids" id="" value="">
            <button id="control_submit"type="submit">Create Golden Road</button>
        </form>
        <div id="control_passages">
            <% if(locals.passages && locals.passages.length > 0){%>
                <% passages.forEach(function(p){ %>
                    <div class="control_passage">
                        <div class="control_select"></div>
                        <div class="control_passage_chapter">
                            <% if(p.category != null){ %>
                                <%=p.category.title%>
                            <% }else{%>
                                Sasame
                            <% }%>
                        </div>
                        <div class="control_passage_keys">
                            <%=p.keys%>
                        </div>
                        <div class="control_passage_passage">
                            <%=p.content%>
                        </div>
                    </div>
                <% }); %>
            <% }else{%>
                <p>...</p>
            <% }%>
        </div>
        <script src="/js/app.js"></script>
        <script src="/js/control.js"></script>
    </body>
</html>
